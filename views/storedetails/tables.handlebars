<h2 id="top">Add/Remove Tables</h2>
<div id="psuedo-form">
  <div class="form-group row">
    <label class="col-sm-5 col-form-label" for="tableName">Enter a Name for the new table:</label>
    <div class="col-sm-5">
      <input class="form-control" id="tableName" type="text" name="tableName">
    </div>
  </div>
  <div class="form-group row" id="seat-input">
    <label class="col-sm-5 col-form-label" for="seatCount">Number of seats (defaults to 1):</label>
    <div class="col-sm-5">
      <input class="form-control" id="seatCount" type="text" name="seatCount">
    </div>
  </div>
  <div class="form-group row" id="section-div" style="display:none;">
    <label class="col-sm-5 col-form-label">Section</label>
    <div class="col-sm-5">
      <p class="form-control-static" id="name-of-section"></p>
    </div>
  </div>
  <button class="btn btn-success" id="new-table-btn" style="display:none;">Create New Table</button>
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Select Section
    </button>
    <div class="dropdown-menu">
      <h6 class="dropdown-header">Select a Section for the new table</h6>
      {{#if sections}}
      {{#each sections}}
        <button class="dropdown-item section-name">{{this.name}}</button>
      {{/each}}
      {{/if}}
      <div class="dropdown-divider"></div>
      <button id="newSectSelect" class="dropdown-item">Create a New Section</button>
    </div>
  </div>
</div>



<hr>
<div id="new-section-div" style="display:none;">
  <div class="form-group">
    <label for="newSection">New Section Name: </label>
    <input id="newSection" type="text" name="newSection">
  </div>
  <button class="btn btn-success" id="new-section-btn">Create New Section</button>
  <button class="btn btn-danger" id="goback-section">Nevermind</button>

<hr>
</div>

{{#if sections}}
<h3>Dining Areas</h3>
{{#each sections}}
  <h4>{{this.name}}</h4>
  {{#if this.tables}}
    {{#each this.tables}}
      {{this.name}} - Seats: {{this.seatCount}}<br>
    {{/each}}
  {{else}}
    No tables yet
  {{/if}}
{{/each}}
{{else}}
  No sections yet
{{/if}}

<script src="/scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="/scripts/tablesection.js" type="text/javascript"></script>
