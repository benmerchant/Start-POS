<h2 id="top-banner">Deactivated Employees</h2>
<div id="loadingIcon" style="display:none;">Loading Icon Goes Here</div>
{{#if emps}}
  {{#each emps}}
    <div class="card emp-card" style="width: 20rem;">

      <h5 class="card-header text-white bg-danger">{{this.first_name}} {{this.last_name}}</h5>
      <ul class="list-group list-group-flush">
        <li class="card-text list-group-item"><strong>Date Hired:&nbsp</strong>{{this.hire_date}}</li>
        <li class="card-text list-group-item"><strong>Last Day:&nbsp</strong>{{this.final_day}}</li>
      </ul>
      <div class="card-body">
        <button id="{{this._id}}" class="btn btn-success reactivate">Reactivate Employee</button>
      </div>

    </div>
  {{/each}}
{{else}}
<h2 class='text-danger'>
  No deactivated employees
</h2>
{{/if}}

<script src="/scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="/scripts/reactivate.js" type="text/javascript"></script>
