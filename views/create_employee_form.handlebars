<h2>Add a New Employee</h2>
{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">
      {{msg}}
    </div>
  {{/each}}
{{/if}}
<!-- add formatting based on errors later -->
<form method="POST" action="/employees/create">
  <div class="form-group">
    <label>Login Number - 6 digit number</label>
    <input type="text" name="login_number" class="form-control" placeholder="Employee number needs to be programatically generated">
  </div>
  <!-- <div class="form-group">
    <label>Employee Password</label>
    <input type="password" name="password" class="form-control" placeholder="Temp password needs to be programatically generated">
  </div> -->
  <!-- <div class="form-group">
    <label>Employee Login Pin</label>
    <input type="password" name="pin_num" class="form-control" placeholder="Temp PIN needs to be programatically generated">
  </div> -->
  <div class="form-group">
    <label>First Name</label>
    <input type="text" name="first_name" class="form-control" placeholder="Employee First Name">
  </div>
  <div class="form-group">
    <label>Middle Name</label>
    <input type="text" name="middle_name" class="form-control" placeholder="Employee Middle Name">
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <input type="text" name="last_name" class="form-control" placeholder="Employee Last Name">
  </div>
  <div class="form-group">
    <label>Social Security Number</label>
    <input type="text" name="ssn" class="form-control" placeholder="Employee SSN">
  </div>
  <div class="form-group">
    <label>Birth Date - create a jQuery calendar</label>
    <input type="text" name="birth_date" class="form-control" placeholder="Need to add validation and conversion to Date()">
  </div>
  <div class="form-group">
    <label for="gender">Gender - how to make sure first option isn't selected on submit</label>
    <select class="form-control" id="gender" name="genderSelect">
      <option disabled selected>Select Gender</option>
      <option>Male</option>
      <option>Female</option>
      <option>Non-binary</option>
    </select>
  </div>
  {{#if roles}}
    <div class="form-group">
      <label for="role">Hired As - find a better way to send the ObjectId</label>
      <select class="form-control" id="role" name="roleSelect">
        {{#each roles}}
          <option>{{name}} - {{_id}}</option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <p>Roles did not import from database - Error from Handlebars</p>
  {{/if}}
  <p>Availability coming soon</p>
  <button type="submit" class="btn btn-primary btn-lg">Submit</button>


</form>
