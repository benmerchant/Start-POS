<h2 id="top">All Tables</h2>
<hr>
{{#if sections}}
{{#each sections}}
<div id="{{this.name}}">
  <h4 class="border-primary">
    {{this.name}}
  </h4>


    {{#if this.tables}}
    {{#each this.tables}}
      {{#if this.open}}
        <button class="btn btn-primary open-table" style="padding:5% 5%">{{this.name}}</button>
      {{else}}
        <button class="btn btn-danger sat-table" style="padding:5% 5%">{{this.name}}</button>
      {{/if}}




    {{/each}}
    {{else}}
      No tables in this sections
    {{/if}}
</div>


{{/each}}
{{else}}
  No sections, maybe error, make you haven't made any yet
{{/if}}

<script src="/scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="/scripts/ordertables.js" type="text/javascript"></script>
